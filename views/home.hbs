<script>
	function openModel() {
		document.querySelector('.model-main').classList.add('model-open');
	}
	function closeModel() {
		document.querySelector('.model-main').classList.remove('model-open');
	}
	setTimeout(function () {
				openModel();
	}, 1000);
</script>