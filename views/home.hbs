<section id="mu-hero">
	<div class="container">
		<div class="mu-testimonial-slide big-slider">
			{{#each book}}
			<li>
				<div class="row">
					<div class="col-md-6 col-12">
						<div class="mu-hero-left">
							<h1>{{title}}</h1>
							<div class="content">
								{{{text}}}
							</div>
							<a href="/books/{{_id}}" class="mu-primary-btn">Ko'rish</a>
						</div>
					</div>
					<div class="col-md-6 col-12">
						<div class="slide-img mu-hero-right">
							<img  src="/{{img}}" alt="Ebook img">
							<span style="color: #fff; margin-top:24px; display:block">
								Kitob muallifi: <b>{{author}}</b>
							</span>
						</div>
					</div>
				</div>
			</li>
			{{/each}}
		</div>
	</div>
</section>
